@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section -->
<section class="hero text-white py-5" style="background: linear-gradient(135deg, #ff7e5f, #feb47b);">
    <div class="container text-center">
        <h1 class="display-4 fw-bold">Welcome to Blogify</h1>
        <p class="lead mt-3">Share your thoughts with the world or explore what others are saying.</p>
        <a href="#blogs" class="btn btn-light btn-lg mt-4 shadow">Explore Blogs</a>
    </div>
</section>
<!-- Featured Blogs -->
<section id="blogs" class="py-5 bg-light">
    <div class="container">
        <h2 class="mb-4 text-center text-primary">Recent Posts</h2>
        <div class="row">
            <!-- Blog Post 1 -->
            <div class="col-md-4">
                <div class="card mb-4 shadow-lg border-0">
                    <img src="https://images.unsplash.com/photo-1515378791036-0648a3ef77b2?crop=entropy&cs=tinysrgb&fit=max&fm=jpg&ixid=MnwzNjUyOXwwfDF8c2VhcmNofDF8fHdyaXRpbmd8ZW58MHx8fHwxNjg3MjYyNzYz&ixlib=rb-1.2.1&q=80&w=400" class="card-img-top rounded-top" alt="The Art of Writing">
                    <div class="card-body">
                        <h5 class="card-title text-primary">The Art of Writing</h5>
                        <p class="card-text">Learn how to express your thoughts creatively and effectively in the digital world.</p>
                        <a href="#" class="btn btn-primary btn-sm">Read More</a>
                    </div>
                </div>
            </div>
            <!-- Blog Post 2 -->
            <div class="col-md-4">
                <div class="card mb-4 shadow-lg border-0">
                    <img src="https://images.unsplash.com/photo-1517430816045-df4b7de11d1d?crop=entropy&cs=tinysrgb&fit=max&fm=jpg&ixid=MnwzNjUyOXwwfDF8c2VhcmNofDJ8fHRlY2h8ZW58MHx8fHwxNjg3MjYyNzYz&ixlib=rb-1.2.1&q=80&w=400" class="card-img-top rounded-top" alt="Tech Trends 2025">
