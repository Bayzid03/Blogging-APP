@model Blogging_APP.Models.CreateBlog
@{
    ViewData["Title"] = "Create Blog";
}

<style>
    body {
        margin: 0;
        padding: 0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #0D1B2A;
        color: #FFFFFF;
    }

    .hero {
        background-color: #FFC300;
        color: #000;
        padding: 60px 40px;
        text-align: left;
    }

        .hero h1 {
            font-size: 64px;
            margin: 0;
            font-weight: bold;
            display: inline;
        }

        .hero span {
            font-size: 20px;
            display: inline-block;
            margin-left: 10px;
            font-weight: 400;
        }

    .form-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 60px 20px;
    }

    .form-box {
        background-color: #1B263B;
        padding: 40px;
        border-radius: 12px;
        width: 100%;
        max-width: 600px;
        box-shadow: 0 0 15px rgba(255, 255, 255, 0.05);
    }

    .form-group {
        margin-bottom: 20px;
    }

        .form-group label {
            display: block;
            margin-bottom: 8px;
            color: #FFC300;
            font-weight: 600;
        }

        .form-group input,
        .form-group textarea {
            width: 100%;
            padding: 12px;
            border-radius: 6px;
            border: none;
            background-color: #2A3A5B;
            color: #FFF;
            font-size: 16px;
        }

        .form-group span {
            color: #ff6b6b;
            font-size: 14px;
        }

    .submit-btn {
        width: 100%;
        background-color: transparent;
        color: #FFF;
        border: 1px solid #FFC300;
        padding: 12px 18px;
        font-size: 16px;
        font-weight: bold;
        border-radius: 6px;
        cursor: pointer;
        transition: background-color 0.3s ease, color 0.3s ease;
        margin-top: 10px;
    }

        .submit-btn:hover {
            background-color: #FFC300;
            color: #000;
        }
</style>

<div class="hero">
    <h1>Create Blog</h1>
    <span>Write and Share Your Thoughts</span>
</div>

<div class="form-wrapper">
    <div class="form-box">
        <form method="post" asp-action="CreateBlog">
            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" />
                <span asp-validation-for="Title"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category"></label>
                <input asp-for="Category" />
                <span asp-validation-for="Category"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tags"></label>
                <input asp-for="Tags" />
                <span asp-validation-for="Tags"></span>
            </div>
            <div class="form-group">
                <label asp-for="Content"></label>
                <textarea asp-for="Content" rows="6" id="Content"></textarea>
                <span asp-validation-for="Content"></span>
            </div>
            <button type="submit" class="submit-btn">Publish Blog</button>
            <button type="button" id="aiSuggestBtn" class="submit-btn">Suggest with AI</button>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById("aiSuggestBtn").addEventListener("click", async () => {
            const content = document.getElementById("Content").value;

            const response = await fetch("/Home/AISuggestions", {
                method: "POST",
                headers: {
                    "Content-Type": "application/json"
                },
                body: JSON.stringify({ content })
            });

            const result = await response.json();

            if (result) {
                document.querySelector('input[name="Title"]').value = result.title;
                document.querySelector('input[name="Tags"]').value = result.tags;
            } else {
                alert("Failed to fetch AI suggestions.");
            }
        });
    </script>
}
